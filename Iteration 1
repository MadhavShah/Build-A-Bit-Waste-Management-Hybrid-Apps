#include<ESP8266WiFi.h>
#include "UbidotsMicroESP8266.h"

#define echo D1
#define trig D0
#define TOKEN  "BBFF-mLZbfHaoQpa3lwB9AGiPR7ViQACJgr"  // Put here your Ubidots TOKEN
#define ID_1 "5afa95ea642ab62beb1336d1" // Put your variable ID here
#define ID_2 "5afc14e2642ab6616fd5fad8"
#define ID_3 "5afc152f642ab661a8f24546"
#define ssid "simple"
#define password "1234567890"

int heightofdustbin= 70, wastecollected=0,value=0;
float binempty;

Ubidots client(TOKEN);

void setup() {
  // put your setup code here, to run once:
  Serial.begin(115200);

   Serial.println("");
  Serial.println("connectin to  ");
    Serial.println(ssid);
  WiFi.begin(ssid,password);
  while(WiFi.status()!=WL_CONNECTED)
  {
    Serial.println("*");
    delay(500);
  }

  Serial.println("Wifi Connected ");

    Serial.println("Connect to ");
      Serial.println("http://");
        Serial.println(WiFi.localIP());
      Serial.println("/");
      
  pinMode(trig,OUTPUT);
  pinMode(echo, INPUT);
  
}

float t=0,d=0;

void loop() {
  // put your main code here, to run repeatedly:
  binheight();
  t=pulseIn( 4, HIGH );
  d=(0.0343*t)/2;
  Serial.println(d);
  
  binempty = ((d-20.95)/(heightofdustbin))*100;
  Serial.print("binempty  =");
  Serial.print(100-binempty);
  Serial.println(" %");
  if(binempty<0)
 {
   client.add(ID_4, 100);
   client.sendAll(false);
  }
  else if(binempty>100)
  {
   client.add(ID_4, 0);
   client.sendAll(false);
  }
  else
  {
     client.add(ID_4, 100-binempty);
    client.sendAll(false);
  }
  delay(500);
}

float binheight()
{
  digitalWrite( trig, HIGH);
  delayMicroseconds(2);
  digitalWrite( trig, LOW);
  delayMicroseconds(10);
  t=pulseIn( echo, HIGH );
  d=(0.0343*t)/2;
  Serial.println(d);
  return d;
}